<% include ../partials/header.ejs %>
    <div class ="container">
        <form action = "/editscore/<%- id%>?_method=PUT" method = "POST" class="form-group" id = "scoreform">
            <% for(var i = 0; i< info.all_score.length; i++) {%>
                <div class = "an_exam form-row border-bottom border-dark p-3">
                    <input type = "text" class = "name form-control col-md-3" name = "all_score[<%- i %>][name]" value = "<%- info.all_score[i].name %>">
                    <input type = "number" name = "all_score[<%- i %>][weight]" class = "weight form-control col-md-2" min = 0 max = 100 step = 0.5 value = <%- Number(info.all_score[i].weight) %>>
                    <span class = "new_score">    
                        <% for(var j = 0; j < info.all_score[i].score.length; j++){ %>
                            <label>Score <%-j+1%></label>
                            <input type = "number" class = "score px-1" style="border-radius:8px" name = "all_score[<%-i%>][score]" min = 0 max = 100 step = 0.1 value =<%- Number(info.all_score[i].score[j])%>></input>
                        <% }%>
                    </span>
                    
                    <a href = "#" class= "add_score">+</a>
                </div>
            <% }%>
            <div class = "new_exam"></div>
            <div class ="form-row p-3">
                <label for="totalw" class ="col-md-3">Total Weight (%)</label>
                <input type = "number" class ="form-control col-md-2" id ="totalw" value = "0" min = "0" max = "100" step ="0.25">
            </div>
            <div class="form-row p-3">
                <label for = "totals" class ="col-md-3">Total Score (%)</label>
                <input type= "number" id = "totals" class="form-control col-md-2"name = "total" value = "0" min = "0" max = "100" step = 0.01>
            </div>
            <div class ="form-row p-3">
                <label for = "grade" class ="col-md-3">Grade</label>
                <input type = "text" id = "grade" class ="form-control col-md-2" name = "grade" value = "TBD">
            </div>
                
            <div>
                <input type = "submit" id = "submit" class ="btn btn-primary" value = "Submit">
            </div>
            
        </form>
        <button class = "add-button btn btn-success"> Add Exam </button>
        
        
        <a href="/">Back To Index Page</a>
    </div>
    <% include ../script/scriptscore.ejs %>
<% include ../partials/footer.ejs %>

